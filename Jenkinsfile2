pipeline {
    agent none
    triggers {
        cron 'H/5 * * * *'
        }
    stages {
        stage('build') {
            agent {label 'agent1'}
            steps{
                sh '''
                echo "this is build stage"
                '''
            }
        }
        stage('deploy') {
            agent {label 'agent2'}
            steps{
                sh '''
                pwd
                '''
            }
        }
    }
}